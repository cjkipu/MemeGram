<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/userpost"
            android:text="Username"
            android:textColor="@color/grey"
            android:fontFamily="@font/heavy"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/postmeme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userpost"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/icon_like"
            android:layout_below="@id/postmeme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/like_icon"/>

        <ImageView
            android:id="@+id/icon_comment"
            android:layout_below="@id/postmeme"
            android:layout_toEndOf="@id/icon_like"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/comment_icon"/>

        <ImageView
            android:id="@+id/icon_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_icon"
            android:layout_below="@id/postmeme"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/caption"
            android:text="Caption"
            android:textColor="@color/grey"
            android:fontFamily="@font/light"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/icon_comment"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>